\&        qemu\-system\-i386 linux.img \e
\&        \-net nic,macaddr=52:54:00:12:34:57 \e
\&        \-net socket,mcast=230.0.0.1:1234
\&        # launch yet another QEMU instance on same "bus"
\&        qemu\-system\-i386 linux.img \e
\&        \-net nic,macaddr=52:54:00:12:34:58 \e
\&        \-net socket,mcast=230.0.0.1:1234
.Ve
.Sp
